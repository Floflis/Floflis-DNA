#!/bin/bash

if [ "$1" = "" ]; then
   cat << "EOF"
 
0===0
 O=o
  O
 o=O
0===0
 O=o     -. .-.   .-. .-.   .-. .-.   .
  O        \   \ /   \   \ /   \   \ /
 o=O      / \   \   / \   \   / \   \
0===0    ~   `-~ `-`   `-~ `-`   `-~ `-
 O=o
  O
 o=O       _            _           
0===0     |_  |   _   _|_  |  o   _
 O=o      |   |  (_)   |   |  |  _>
  O
 o=O         __| |_ __   __ _ 
0===0       / _` | '_ \ / _` |
 O=o       | (_| | | | | (_| |
  O         \__,_|_| |_|\__,_|
 o=O
0===0
 O=o
  O
 o=O
0===0

EOF
   echo "Type 'floflis --help' (without quotes) to see a list of available commands."
fi

if [ "$1" = "--help" ] || [ "$1" = "-h" ]; then
   echo "Available commands:"
   echo "   --help, -h                  Shows all available commands"
fi

